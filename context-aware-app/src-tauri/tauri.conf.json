{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TrendRadar",
  "version": "0.1.0",
  "identifier": "com.trendradar.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:4001",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Settings",
        "width": 800,
        "height": 600,
        "decorations": false,
        "transparent": false,
        "visible": false,
        "center": true
      },
      {
        "label": "popup",
        "title": "Context-Aware Selection",
        "width": 500,
        "height": 64,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true,
        "shadow": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "../actions.json",
      "../settings.json"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}